# Maintainer: Lukas Krickl <lukas@krickl.dev>
pkgname=minutecat
BRANCH=main
FRONTEND=cli
pkgver=0.1.0
pkgrel=1
pkgdesc="A simple logfile monitor for the command line"
arch=('x86_64')
url="https://github.com/unkink2/minutecat"
license=('MIT')
depends=()
# depends=(libx11 libxext libxft libxinerama libxcursor libxrender libxfixes libpng pango cairo libgl mesa)
makedepends=('rustup', 'unzip')
source=("$pkgname-$pkgver.zip::https://github.com/unlink2/${pkgname}/archive/refs/heads/${BRANCH}.zip")
noextract=("$pkgname-$pkgver")
sha512sums=("SKIP")

build() {
  rustup update
  rustup default stable

  cd $srcdir
  unzip "$pkgname-$pkgver.zip"

  cd "$pkgname-$pkgver/$frontend"

  RUSTUP_TOOLCHAIN=stable cargo build --release --locked
}

check() {
  cd "$pkgname-$pkgver/$frontend"

  RUSTUP_TOOLCHAIN=stable cargo test --release --locked
}

package() {
  cd "$pkgname-$pkgver/$frontend"
  local OUT_DIR=$(<out_dir)

  install -Dm755 "target/release/minutecat" "$pkgdir/usr/bin/minutecat"

  install -Dm644 "README.md" "$pkgdir/usr/share/doc/${pkgname}/README.md"
  install -Dm644 "LICENSE" "$pkgdir/usr/share/licenses/${pkgname}/LICENSE"
}
